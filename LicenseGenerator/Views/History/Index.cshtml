@using LicenseGenerator.Models
@model IEnumerable<GeneratedLicense>

@{
    ViewBag.Title = "Historia licencji";
    ViewBag.Module = "History";
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Program</th>
            <th>Firma</th>
            <th>NIP</th>
            <th>Uprawnienia</th>
            <th>Licencja do</th>
            <th>Dodatkowe informacje</th>
            <th>Liczba stanowisk</th>
            <th>Wersja programu</th>
            <th>NIP partnera</th>
            <th>Zaszyfrowana</th>
            <th>Data wygenerowania</th>
        </tr>
    </thead>
    <tbody>
        @foreach (GeneratedLicense license in Model)
        {
            <tr>
                <td>@license.ProgramName</td>
                <td>@license.Company</td>
                <td>@license.NIP</td>
                <td>@license.Privileges</td>
                <td>@(license.LicenseTermDate != null ? license.LicenseTermDate.Value.ToShortDateString() : "Nieograniczona")</td>
                <td>@license.AddionalInformation</td>
                <td>@license.NumberOfStands</td>
                <td>@license.ProgramVersion</td>
                <td>@license.PartnerNIP</td>
                <td class="text-center">
                    @if (license.IsEncrypted)
                    {
                        <span class='glyphicon glyphicon-check'></span>
                    }
                    else
                    {
                        <span class='glyphicon glyphicon-unchecked'></span>
                    }
                </td>
                <td>@license.GenerationDate</td>
            </tr>
        }
    </tbody>
</table>
